@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.ProductDetails>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = "Master.cshtml";
	ViewData["PageTitle"] = @Model.Value("ProductName");
	ViewData["pageDescription"] =@Model.Value("ProductDiscription");
	foreach (var keyword in @Model.ProductsTaggs){
    ViewData["PageKeywords"] +=$"{keyword},";
}
	
	
}

<div class="container">
    <div class="d-flex mt-3 mb-3">
        <div class="Product-image-container">
            @{
             /*Get the media picker of the model to display the picture*/
        var siteLogo = Model.Value<IPublishedContent>("productImage");
        @*bool hasSiteLogo = siteLogo != null;*@}
            @if(siteLogo!=null){
           <img src="@siteLogo.Url()">
           }else{<img src="....">}
        </div>
        <div class="p-3">
            <p>@Model.Value("ProductName")</p>
            <p>@Model.Value("ProductDiscription")</p>
            <p>@Model.Value("ProductPrice")</p>
        </div>
    </div>
    
</div>